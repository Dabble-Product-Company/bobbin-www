---
interface Props {
	icon: string;
	iconAlt: string;
	title: string;
	description: string;
}

const { icon, iconAlt, title, description } = Astro.props;
---

<div
	class="flex flex-col w-full max-w-xs mx-auto justify-center items-center space-y-4">
	<div
		class="flex w-16 h-16 border border-neutral-200 rounded-full items-center justify-center">
		<img src={icon} alt={iconAlt} class="w-8 h-8" />
	</div>
	<div class="flex flex-col gap-0 grow">
		<p class="font-semibold">{title}</p>
		<h5 class="typography-secondary">
			{description}
		</h5>
	</div>
</div>
