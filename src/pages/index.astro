---
import Layout from '../layouts/Base.astro';
import Container from '../components/Container.astro';
import Module from '../components/Module.astro';
import settings from '../data/settings';
import Feature from '../components/Feature.astro';
import Link from '../components/Link.astro';
const title = settings.title;
const description = settings.description;

const seo = {
	title: title,
	description: description,
};
---

<Layout seo={seo}>
	<Container>
		<div class="flex flex-col">
			<div
				class="flex flex-col full-width items-center py-0 md:py-16 px-8 relative max-w-screen overflow-x-clip overflow-y-visible">
				<div
					class="flex flex-col gap-8 w-full my-auto md:max-w-5xl motion-translate-y-in-25 motion-opacity-in-0 motion-delay-[1s]">
					<div class="flex flex-col max-w-md my-auto">
						<h5 class="font-bold m-0 self-start">
							For iOS & iPadOS
						</h5>
						<h1 class="text-4xl md:text-6xl leading-[1.1] pb-8">
							Your sewing, simplified
						</h1>
						<h4 class="typography-secondary font-normal">
							Bobbin makes it easy to plan sewing projects,
							organize your stash of patterns and fabrics, and
							find inspiration for your next make
						</h4>
					</div>
					<div
						class="my-auto flex flex-col gap-4 items-start self-start">
						<div class="flex flex-col">
							<p class="font-semibold m-0">
								Try Bobbin free for 30 days
							</p>

						</div>
						<Link href="https://apps.apple.com/us/app/bobbin-sewing-organizer/id6744337422?platform=iphone" external>
							<img
								src="../../appstoreBadge.svg"
								alt="Download on the App Store"
								class="h-14 m-0"
							/>
						</Link>
						<h6 class="m-0 typography-secondary">
							Requires an iPhone or iPad running iOS 17 or later
						</h6>
					</div>
				</div>

				<img
					src="../../header-bg.jpg"
					alt="Header background"
					class="absolute md:right-0 w-full min-w-4xl md:min-w-5xl max-w-[1600px] -z-10 -top-48 motion-opacity-in-0 motion-duration-[3s] motion-delay-[0.5s] motion-blur-in-md motion-easing-[ease-in] opacity-80 md:opacity-100"
				/>
				<!-- <div
					class="w-full md:w-1/2 max-w-[400px] md:max-w-full h-[400px] md:h-full max-h-[560px] relative order-first md:order-last">
					<img
						src="../../hero1.png"
						alt="Hero"
						class="-z-0 absolute top-0 right-0 h-full max-h-[560px] object-cover translate-y-8"
					/>
					<img
						src="../../hero2.png"
						alt="Hero"
						class="object-cover -z-10 absolute bottom-0 left-0 h-full max-h-[560px] -translate-y-8 scale-95"
					/>
				</div> -->
			</div>

			<div class="flex flex-col my-16">
				<Module
					eyebrow="Projects"
					title="Manage your makes, from concept to closet"
					description="Projects give you a home to plan your ideas, document progress, and finish your makes"
					imageSrc="../../features/feature1.png"
					backgroundImageSrc="../../features/feature-bg1.png"
					imageAlt="Manage your projects"
				/>

				<Module
					eyebrow="Stash"
					title="Your entire stash, in your pocket"
					description="Keep track of every fabric and pattern in your stash — all in an easy-to-use interface"
					imageSrc="../../features/feature2.png"
					backgroundImageSrc="../../features/feature-bg2.png"
					imageAlt="Your stash in your pocket"
					isReversed={true}
				/>

				<Module
					eyebrow="Explore"
					title="Discover new patterns & find your next project"
					description="Browse thousands of patterns in Bobbin's database — sourced from your favorite big-name brands and indie pattern makers"
					imageSrc="../../features/feature3.png"
					backgroundImageSrc="../../features/feature-bg3.png"
					imageAlt="Discover new patterns"
				/>
			</div>

			<div
				class="flex md:flex-col h-[640px] full-width relative overflow-hidden flex-col-reverse">
				<div
					class="px-8 py-16 z-50 mx-auto w-full max-w-5xl flex md:justify-end justify-start h-auto md:my-auto">
					<div
						class="flex flex-col w-full max-w-md text-left text-white space-y-3 shrink">
						<h3 class="typography-secondary">Featuring</h3>
						<h1 class="mt-0">Collage Mode</h1>
						<p class="typography-secondary text-balance max-w-xl">
							Bring your ideas to life with interactive collages,
							assembled from photos, stickers, text, and drawings
						</p>
					</div>
				</div>

				<div class="block md:hidden">
					<img
						src="../../noise-mobile.png"
						alt="Noise overlay"
						class="w-full h-full object-fill object-center z-0 absolute top-0 left-0 bottom-0 right-0 rotate-0 m-auto"
					/>

					<img
						src="../../collage-mobile.jpg"
						alt="Collage"
						class="w-vw min-h-full object-cover object-left md:object-center -z-10 absolute left-0 top-0 bottom-0 right-0 blur-sm intersect:blur-none scale-105 intersect:scale-100 transition duration-500 ease-in m-auto"
					/>
				</div>

				<div class="hidden md:block">
					<img
						src="../../noise.png"
						alt="Noise overlay"
						class="w-full h-full object-fill object-center z-0 absolute top-0 left-0 bottom-0 right-0 rotate-0 m-auto"
					/>

					<img
						src="../../collage.jpg"
						alt="Collage"
						class="w-vw min-h-full object-cover object-left md:object-center -z-10 absolute left-0 top-0 bottom-0 right-0 blur-sm intersect:blur-none scale-105 intersect:scale-100 transition duration-500 ease-in m-auto"
					/>
				</div>
			</div>

			<div class="flex flex-col">
				<div
					class="flex flex-col text-center z-10 space-y-24 my-16 mx-auto">
					<h3 class="typography-secondary">And more...</h3>
					<div
						class="flex flex-col md:flex-row gap-x-8 gap-y-16 flex-wrap justify-center text-center">
						<Feature
							icon="../../icons/import.svg"
							iconAlt="Import icon"
							title="Import from the web"
							description="Quickly save patterns and fabrics to your stash by pasting their URL"
						/>

						<Feature
							icon="../../icons/filter.svg"
							iconAlt="Filter icon"
							title="Search, sort, filter"
							description="With an organized stash, finding the perfect pattern or fabric for a project has never been easier"
						/>

						<Feature
							icon="../../icons/notes.svg"
							iconAlt="Notes icon"
							title="Project photos & notes"
							description="Document your project progress with photos & notes"
						/>

						<Feature
							icon="../../icons/icloud.svg"
							iconAlt="iCloud icon"
							title="iCloud Sync"
							description="Your projects and stash are automatically synced across all of your devices"
						/>

						<Feature
							icon="../../icons/private.svg"
							iconAlt="Private icon"
							title="Private by design"
							description="Bobbin will never display ads and doesn't collect or share any user data"
						/>
					</div>
				</div>
			</div>

			<div
				class="flex flex-col full-width bg-[url('../../devices-bg.jpg')] bg-cover bg-bottom space-y-8 text-balance px-8 py-16 h-auto relative overflow-hidden">
				<div
					class="flex flex-col w-full h-auto md:h-[720px] relative items-center max-w-5xl mx-auto z-50 gap-8">
					<div
						class="flex flex-col space-y-2 w-full text-center max-w-xl">
						<h3 class="typography-secondary">Designed for</h3>
						<h2>iPhone & iPad</h2>
						<p class="typography-secondary">
							Bobbin fits perfectly into your sewing workflow,
							with a beautiful and seamless user experience across
							your devices
						</p>
					</div>

					<img
						src="../../devices.png"
						alt="iPhone devices"
						class="object-cover max-h-[480px] m-auto"
					/>
				</div>
			</div>

			<div
				class="flex flex-col md:flex-row justify-between items-center py-16">
				<div class="flex flex-col">
					<h3>Try Bobbin free for 30 days</h3>
					<p>And own Bobbin forever with a single in-app purchase</p>
				</div>
				<div class="flex flex-row gap-4">
					<Link href="https://apps.apple.com/us/app/bobbin-sewing-organizer/id6744337422?platform=iphone" external>
						<img
							src="../../appstoreBadge.svg"
							alt="Download on the App Store"
							class="h-14 m-0"
						/>
					</Link>
				</div>
			</div>
		</div>
	</Container>
</Layout>
