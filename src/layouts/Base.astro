---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body class="flex flex-col mx-auto min-h-dvh bg-neutral-100 dark:bg-neutral-950 text-neutral-950 dark:text-neutral-100 font-sans">
    <Header />
    <main class="grow h-[calc(100%-3rem)]">
      <slot />
    </main>
    <Footer/>
  </body>
</html>
