---
import BaseHead from '../components/BaseHead.astro';
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead {...seo} />
		<slot name="head-bottom" />
	</head>
	<body
		class="m-0 h-screen w-screen bg-neutral-100 text-neutral-900 font-sans antialiased overscroll-none overflow-x-hidden">
		<Header />
		<main class="h-auto py-16 typography">
			<slot />
		</main>
		<Footer />
	</body>
</html>
