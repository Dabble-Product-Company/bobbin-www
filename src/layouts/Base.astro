---
import BaseHead from "../components/BaseHead.astro";
import type { Props as BaseHeadProps } from '../components/BaseHead.astro';
import Footer from "../components/Footer.astro";

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body class="flex flex-col max-w-3xl mx-auto h-dvh bg-neutral-100 dark:bg-neutral-950 text-neutral-950 dark:text-neutral-100 font-sans">
    <slot name="header" />
    <main class="grow h-[calc(100%-2rem)]">
      <slot />
    </main>
    <Footer/>
  </body>
</html>
